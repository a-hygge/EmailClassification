<!-- Custom CSS -->
<link rel="stylesheet" href="/css/retrain.css">

<!-- Sample Selection Page -->
<div class="container-fluid mt-4">
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h2 class="fw-bold mb-1">
            <i class="fas fa-sync-alt me-2 text-primary"></i>
            Retrain Model - Step 1
          </h2>
          <p class="text-muted mb-0">
            Chọn mẫu dữ liệu huấn luyện
          </p>
        </div>
        <div>
          <a href="/dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>
            Quay lại Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Progress Steps -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div class="text-center flex-fill">
              <div class="step-circle active">1</div>
              <p class="mb-0 mt-2 fw-bold text-primary">Chọn mẫu</p>
            </div>
            <div class="step-line"></div>
            <div class="text-center flex-fill">
              <div class="step-circle">2</div>
              <p class="mb-0 mt-2 text-muted">Cấu hình</p>
            </div>
            <div class="step-line"></div>
            <div class="text-center flex-fill">
              <div class="step-circle">3</div>
              <p class="mb-0 mt-2 text-muted">Kết quả</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <!-- Sample Selection Content -->
          <div class="row mb-4">
            <div class="col-12">
              <h5 class="mb-3">
                <i class="fas fa-database me-2"></i>
                Chọn mẫu dữ liệu huấn luyện
              </h5>
              <p class="text-muted">
                Chọn ít nhất 10 email để sử dụng làm dữ liệu huấn luyện. Bạn có thể lọc theo nhãn hoặc tìm kiếm.
              </p>
            </div>
          </div>

          <!-- Filters and Actions -->
          <div class="row mb-3">
            <div class="col-md-4">
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-search"></i>
                </span>
                <input type="text" class="form-control" id="searchSamples" 
                       placeholder="Tìm kiếm mẫu...">
              </div>
            </div>
            <div class="col-md-3">
              <select class="form-select" id="labelFilter">
                <option value="all">Tất cả nhãn</option>
              </select>
            </div>
            <div class="col-md-5 text-end">
              <button class="btn btn-outline-primary" onclick="selectAllSamples()">
                <i class="fas fa-check-double me-1"></i>
                Chọn tất cả
              </button>
              <button class="btn btn-outline-secondary" onclick="deselectAllSamples()">
                <i class="fas fa-times me-1"></i>
                Bỏ chọn tất cả
              </button>
            </div>
          </div>

          <!-- Selected Count -->
          <div class="row mb-3">
            <div class="col-12">
              <div class="alert alert-info d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <span>Đã chọn: <strong id="selectedCount">0</strong> mẫu</span>
              </div>
            </div>
          </div>

          <!-- Loading Indicator -->
          <div id="samplesLoading" class="text-center py-5" style="display: none;">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Đang tải dữ liệu...</p>
          </div>

          <!-- Samples Table -->
          <div class="row">
            <div class="col-12">
              <div class="table-responsive">
                <table class="table table-hover" id="samplesTable">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 50px;">
                        <input type="checkbox" class="form-check-input" id="selectAllCheckbox">
                      </th>
                      <th style="width: 80px;">ID</th>
                      <th>Nội dung</th>
                      <th style="width: 150px;">Nhãn</th>
                    </tr>
                  </thead>
                  <tbody id="samplesTableBody">
                    <!-- Samples will be loaded here dynamically -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Continue Button -->
          <div class="row mt-4">
            <div class="col-12 text-end">
              <button class="btn btn-primary btn-lg" id="continueBtn" onclick="continueToConfig()" disabled>
                Tiếp tục
                <i class="fas fa-arrow-right ms-2"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Include custom JavaScript -->
<script src="/js/retrain-samples.js"></script>

<style>
.step-circle {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #e9ecef;
  color: #6c757d;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.2rem;
}

.step-circle.active {
  background-color: #0d6efd;
  color: white;
}

.step-line {
  flex: 1;
  height: 2px;
  background-color: #e9ecef;
  margin: 0 1rem;
}
</style>

