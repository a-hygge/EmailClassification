<!-- Custom CSS -->
<link rel="stylesheet" href="/css/retrain.css">

<!-- Retrain Model Page -->
<div class="container-fluid mt-4">
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h2 class="fw-bold mb-1">
            <i class="fas fa-sync-alt me-2 text-primary"></i>
            Retrain Model
          </h2>
          <p class="text-muted mb-0">
            Huấn luyện lại mô hình phân loại email với dữ liệu tùy chỉnh
          </p>
        </div>
        <div>
          <a href="/dashboard" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>
            Quay lại Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Tab Navigation -->
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
          <ul class="nav nav-tabs card-header-tabs" id="retrainTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="samples-tab"
                      data-bs-target="#samples" type="button" role="tab"
                      aria-controls="samples" aria-selected="true">
                <i class="fas fa-check-square me-2"></i>
                Bước 1: Chọn mẫu
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link disabled" id="config-tab"
                      data-bs-target="#config" type="button" role="tab"
                      aria-controls="config" aria-selected="false" disabled>
                <i class="fas fa-cog me-2"></i>
                Bước 2: Cấu hình và thực thi
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link disabled" id="results-tab"
                      data-bs-target="#results" type="button" role="tab"
                      aria-controls="results" aria-selected="false" disabled>
                <i class="fas fa-chart-line me-2"></i>
                Bước 3: Kết quả
              </button>
            </li>
          </ul>
        </div>

        <div class="card-body">
          <div class="tab-content" id="retrainTabContent">
            <!-- Tab 1: Sample Selection -->
            <div class="tab-pane fade show active" id="samples" role="tabpanel">
              <%- include('./partials/sampleSelection') %>
            </div>

            <!-- Tab 2: Configuration -->
            <div class="tab-pane fade" id="config" role="tabpanel">
              <%- include('./partials/configuration') %>
            </div>

            <!-- Tab 3: Results -->
            <div class="tab-pane fade" id="results" role="tabpanel">
              <%- include('./partials/results') %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Include Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<!-- Include custom JavaScript -->
<script src="/js/retrain-samples.js"></script>
<script src="/js/retrain-config.js"></script>
<script src="/js/retrain-results.js"></script>

