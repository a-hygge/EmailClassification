<!-- Content Wrapper -->
<div class="container-fluid mt-4">
    <!-- Toast Notification -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
        <div id="deleteToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="fas fa-check-circle me-2"></i>
                    <span id="toastMessage">Đã xóa email thành công!</span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold mb-1">
                        <i class="fas fa-paper-plane me-2 text-primary"></i> Email đã gửi
                    </h2>
                    <p class="text-muted mb-0">
                        <small>
                            Tổng số: <strong id="totalEmailsCount"><%= emails.length %></strong> email
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Email List -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0 ps-4" style="width: 40px;"></th>
                                    <th class="border-0">Người nhận</th>
                                    <th class="border-0">Tiêu đề</th>
                                    <th class="border-0">Thời gian gửi</th>
                                    <th class="border-0 text-end pe-4">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (emails && emails.length > 0) { %>
                                    <% emails.forEach(email => { %>
                                        <tr class="email-row" data-email-id="<%= email.id %>">
                                            <td class="align-middle ps-4">
                                                <i class="fas fa-paper-plane text-primary"></i>
                                            </td>

                                            <!-- Người nhận -->
                                            <td class="align-middle">
                                                <% if (email.recipients && email.recipients.length > 0) { %>
                                                    <% email.recipients.forEach((recipient, index) => { %>
                                                        <span><%= recipient.receiver?.username || 'Không rõ' %></span>
                                                        <% if (index < email.recipients.length - 1) { %>,
                                                            <% } %>
                                                                <% }) %>
                                                                    <% } else { %>
                                                                        <em class="text-muted">Không có người nhận</em>
                                                                        <% } %>
                                            </td>

                                            <!-- Tiêu đề -->
                                            <td class="align-middle">
                                                <div class="text-truncate" style="max-width: 400px;">
                                                    <a href="/emails/<%= email.id %>" class="text-decoration-none text-dark fw-bold">
                                                        <%= email.title || 'Không có tiêu đề' %>
                                                    </a>
                                                    <% if (email.content) { %>
                                                        <br>
                                                        <small class="text-muted"><%= email.content.substring(0, 50) %>...</small>
                                                        <% } %>
                                                </div>
                                            </td>

                                            <!-- Thời gian gửi -->
                                            <td class="align-middle">
                                                <small class="text-muted">
                                                    <%= new Date(email.createdAt).toLocaleString('vi-VN', {
                                                        day: '2-digit',
                                                        month: '2-digit',
                                                        year: 'numeric',
                                                        hour: '2-digit',
                                                        minute: '2-digit'
                                                    }) %>
                                                </small>
                                            </td>

                                            <!-- Hành động -->
                                            <td class="align-middle text-end pe-4">
                                                <div class="btn-group" role="group">
                                                    <a href="/emails/<%= email.id %>" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger delete-email" data-email-id="<%= email.id %>" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6" class="text-center py-5">
                                                        <i class="fas fa-paper-plane fa-3x text-muted mb-3 d-block"></i>
                                                        <p class="text-muted mb-2 h5">Chưa có email nào được gửi đi</p>
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Delete email
    document.querySelectorAll('.delete-email').forEach(btn => {
        btn.addEventListener('click', function() {
            if (confirm('Bạn có chắc chắn muốn xóa email này?')) {
                const emailId = this.dataset.emailId;
                fetch(`/emails/${emailId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(res => res.json())
                    .then(result => {
                        if (result.success) {
                            // Xóa hàng email khỏi bảng
                            const emailRow = document.querySelector(`.email-row[data-email-id="${emailId}"]`);
                            if (emailRow) emailRow.remove();

                            // Cập nhật tổng số email
                            const totalElement = document.getElementById('totalEmailsCount');
                            if (totalElement) {
                                let count = parseInt(totalElement.textContent, 10);
                                totalElement.textContent = Math.max(0, count - 1);
                            }

                            // Hiện thông báo
                            const toastEl = document.getElementById('deleteToast');
                            const toast = new bootstrap.Toast(toastEl, {
                                autohide: true,
                                delay: 3000
                            });
                            toast.show();
                        } else {
                            alert('Lỗi khi xóa email!');
                        }
                    })
                    .catch(error => {
                        console.error('Error deleting email:', error);
                        alert('Đã xảy ra lỗi khi xóa email!');
                    });
            }
        });
    });
</script>